package while문;

import java.util.Scanner;

public class Ex02 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		
		int num = 0;
		int sum = 1;
		
		while(true) {   
			System.out.print("숫자 입력 : ");
			num = sc.nextInt();
			
			if(num == -1) {  
				break;
				sum++;
				
			}
		}
		
		System.out.println("누적결과 : " + sum);

	}

}
