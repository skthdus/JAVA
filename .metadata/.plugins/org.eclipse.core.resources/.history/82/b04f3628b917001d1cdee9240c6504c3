package while문;

import java.util.Scanner;

public class Ex03 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int num = 0; 
		int a = 0;
		int b = 0;
		
		
		while(true) {
			System.out.print("숫자 입력 : ");
			num = sc.nextInt();
			if (num%2==1) {
				a+=1;
			} else if (num%2==0) {
				b+=1;
			}
			
			if(num==-1) {
				break;
			}	
		}
		System.out.println("홀수 개수 : " + a);
		System.out.println("짝수 개수 : " + b);
		


	}

}
