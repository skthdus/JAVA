package while문;

import java.util.Scanner;

public class Ex02 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("숫자 입력 : ");
		
		int num = 0;
		
		while(true) {   
			System.out.print("숫자 입력 : ");
			num = sc.nextInt();
			
			if(num == -1) {  
				break;
			}
		} 

	}

}
