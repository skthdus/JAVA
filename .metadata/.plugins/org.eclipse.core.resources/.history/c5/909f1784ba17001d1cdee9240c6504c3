package while문;

import java.util.Scanner;

public class Ex04 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("현재 몸무게 : ");
		int num = 0;
		
		
		int a = 0;
		int b = 0;
		
		
		
		while(true) {
			num = sc.nextInt();
			a++;
			
		
			System.out.print(a + "주차 감량 몸무게 : " );
			b = sc.nextInt();
		
		}
		
	}

}
